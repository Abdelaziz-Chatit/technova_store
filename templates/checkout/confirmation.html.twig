{% extends 'base.html.twig' %}

{% block title %}Order Confirmation{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 3rem auto; text-align: center;">
        <div style="font-size: 5rem; margin-bottom: 1rem;">✅</div>
        
        <h1 style="color: #27ae60; margin-bottom: 1rem;">Order Placed Successfully!</h1>
        
        <p style="font-size: 1.2rem; color: #7f8c8d; margin-bottom: 2rem;">
            Thank you for your order. We'll send a confirmation email shortly.
        </p>

        <div style="background: #f8f9fa; border: 1px solid #ddd; border-radius: 8px; padding: 2rem; text-align: left; margin-bottom: 2rem;">
            <h2 style="margin-top: 0;">Order Details</h2>
            
            <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1.5rem;">
                <strong>Order Number:</strong>
                <span>#{{ order.id }}</span>
                
                <strong>Date:</strong>
                <span>{{ order.createdAt|date('F j, Y g:i A') }}</span>
                
                <strong>Status:</strong>
                <span style="color: #f39c12; font-weight: bold; text-transform: uppercase;">{{ order.status }}</span>
                
                <strong>Total:</strong>
                <span style="font-size: 1.2rem; color: #27ae60; font-weight: bold;">${{ order.totalAmount|number_format(2) }}</span>
            </div>

            <h3>Shipping Information</h3>
            <p style="margin: 0.5rem 0;">
                <strong>{{ order.customerName }}</strong><br>
                {{ order.customerEmail }}<br>
                {% if order.customerPhone %}{{ order.customerPhone }}<br>{% endif %}
            </p>
            <p style="white-space: pre-line; color: #7f8c8d;">{{ order.shippingAddress }}</p>

            <h3 style="margin-top: 2rem;">Items Ordered</h3>
            {% for item in order.items %}
                <div style="display: flex; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid #ddd;">
                    <div>
                        <strong>{{ item.product.name }}</strong>
                        <span style="color: #7f8c8d;"> × {{ item.quantity }}</span>
                    </div>
                    <div>${{ (item.price * item.quantity)|number_format(2) }}</div>
                </div>
            {% endfor %}
        </div>

        <div style="display: flex; gap: 1rem; justify-content: center;">
            <a href="{{ path('app_home') }}" class="btn">
                Continue Shopping
            </a>
            <a href="{{ path('app_product_catalog') }}" class="btn btn-success">
                Browse Products
            </a>
        </div>
    </div>
{% endblock %}