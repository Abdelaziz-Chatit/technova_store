{% extends 'base.html.twig' %}

{% block title %}Welcome to MyShop{% endblock %}

{% block body %}
    <section style="text-align: center; padding: 3rem 0;">
        <h1>Welcome to MyShop</h1>
        <p style="font-size: 1.2rem; color: #7f8c8d; margin: 1rem 0;">Discover our latest products</p>
        <a href="{{ path('app_product_catalog') }}" class="btn">Browse All Products</a>
    </section>

    <section>
        <h2>Latest Products</h2>
        <div class="product-grid">
            {% for product in products %}
                {% include 'partials/_product_card.html.twig' with {'product': product} %}
            {% else %}
                <p>No products available yet.</p>
            {% endfor %}
        </div>
    </section>
{% endblock %}