{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; margin-top: 2rem;">
        <div>
            {% if product.image %}
                <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" style="width: 100%; aspect-ratio: 4/3; object-fit: cover; border-radius: 8px;">
            {% else %}
                <div style="width: 100%; aspect-ratio: 4/3; background: #ecf0f1; display: flex; align-items: center; justify-content: center; border-radius: 8px;">
                    <span style="color: #95a5a6; font-size: 1.2rem;">No image</span>
                </div>
            {% endif %}
        </div>

        <div>
            <h1>{{ product.name }}</h1>
            
            {% if product.category %}
                <p style="color: #7f8c8d; margin: 0.5rem 0;">
                    Category: 
                    <a href="{{ path('app_product_by_category', {slug: product.category.slug}) }}">
                        {{ product.category.name }}
                    </a>
                </p>
            {% endif %}

            <p style="font-size: 2rem; color: #27ae60; font-weight: bold; margin: 1rem 0;">
                ${{ product.price }}
            </p>

            {% if product.description %}
                <div style="margin: 2rem 0; line-height: 1.8;">
                    <h3>Description</h3>
                    <p>{{ product.description }}</p>
                </div>
            {% endif %}

            <div style="margin-top: 2rem;">
                <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" data-action="add-to-cart" data-product-id="{{ product.id }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('cart') }}">
                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                        <label for="quantity" style="font-weight: bold;">Quantity:</label>
                        <input type="number" id="quantity" name="quantity" value="1" min="1" max="99" 
                            style="width: 80px; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;">
                    </div>
                    
                    <button type="submit" class="btn btn-success" style="font-size: 1.1rem; padding: 1rem 2rem;">
                        üõí Add to Cart
                    </button>
                </form>
    
                <a href="{{ path('app_product_catalog') }}" style="margin-left: 1rem; color: #3498db;">
                    ‚Üê Back to products
                </a>
            </div>
        </div>
    </div>
{% endblock %}